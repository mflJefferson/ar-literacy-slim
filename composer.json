{
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "bryanjhv/slim-session": "^4.0",
        "doctrine/orm": "^2.5",
        "monolog/monolog": "^1.24",
        "php-curl-class/php-curl-class": "^7.3",
        "php-di/php-di": "^6.0",
        "php-di/slim-bridge": "^3.0",
        "selective/basepath": "^0.1.1",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1",
        "slim/php-view": "^2.2",
        "tbetool/ibm-watson-tts": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
